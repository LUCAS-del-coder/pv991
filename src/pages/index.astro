      .game-card { border-radius: 8px; }
      .game-badge { font-size: 10px; padding: 3px 8px; }
      .header-buttons { gap: 8px; }
      .btn { padding: 8px 12px; font-size: 11px; }
      .banner-carousel { height: 200px; }
      .main-content { padding: 10px; }
    }
  </style>

  <script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector((e.currentTarget as HTMLAnchorElement).getAttribute('href') || '');
        if (target) target.scrollIntoView({ behavior: 'smooth' });
      });
    });

    let currentSlide = 0;
    const dots = document.querySelectorAll('.dot');
    
    function changeDot() {
      dots.forEach(dot => {
        dot.classList.remove('active');
        dot.setAttribute('aria-selected', 'false');
      });
      dots[currentSlide].classList.add('active');
      dots[currentSlide].setAttribute('aria-selected', 'true');
      currentSlide = (currentSlide + 1) % dots.length;
    }
    
    setInterval(changeDot, 3000);

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        changeDot();
      });
    });
  </script>
